</head>

<!-- Search Bar -->
<div>
    <form method="post" class="input-group">
        <input asp-for="search" type="search" class="form-control rounded" placeholder="Tìm Kiếm..." aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-btn" style="padding-left: 20px;">
            <button asp-page-handler="Search" type="submit" class="btn btn-outline-success" data-mdb-ripple-init>Tìm Kiếm</button>
        </span>
    </form>

    <!-- Toggle Button for Advanced Search in a new row -->
    <div style="margin-top: 10px; text-align: left;">
        <button class="btn btn-outline-info" id="toggleAdvancedSearch">Tìm Kiếm Nâng Cao</button>
    </div>
</div>

<!-- Advanced Search Panel for Item (Initially Hidden) -->
<div id="advancedSearchPanel" class="advanced-search-container" style="display: none; margin-top: 20px;">
    <div class="card p-3 mb-4 custom-card-width">
        <h5 class="card-title">Tìm Kiếm Nâng Cao</h5>
        <form asp-page-handler="SearchAdvanced" method="post">
            <div class="row">
                <!-- First row with 3 columns -->
                <div class="col-md-4">
                    <label class="form-label">Mã Vật Phẩm</label>
                    <input asp-for="filter.ItemCode" class="form-control" />
                    <span asp-validation-for="filter.ItemCode" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tên Vật Phẩm</label>
                    <input asp-for="filter.ItemName" class="form-control" />
                    <span asp-validation-for="filter.ItemName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Mô Tả</label>
                    <input asp-for="filter.ItemDescription" class="form-control" />
                    <span asp-validation-for="filter.ItemDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <!-- Second row with 3 columns -->
                <div class="col-md-4">
                    <label class="control-label">Loại Vật Phẩm</label>
                    <select asp-for="filter.ItemType">
                        <option value="" disabled selected>Chọn Loại Vật Phẩm</option>
                        <option value="CHARACTER">Nhân Vật</option>
                        <option value="ROOM">Phòng</option>
                        <option value="DEFAULT">Mặc Định</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="control-label">Trạng Thái</label>
                    <select asp-for="filter.ItemStatus">
                        <option value="" disabled selected>Chọn Trạng Thái</option>
                        <option value="DISABLE">Vô Hiệu Hóa</option>
                        <option value="ENABLE">Kích Hoạt</option>
                        <option value="PENDING">Chờ Duyệt</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Ngày Tạo</label>
                    <input asp-for="filter.CreatedDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="filter.CreatedDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <!-- Third row with 3 columns -->
                <div class="col-md-6">
                    <label class="form-label">Có Thể Hết Hạn</label>
                    <select asp-for="filter.CanExpire" class="form-select">
                        <option value="" disabled selected>Chọn</option>
                        <option value="true">Có</option>
                        <option value="false">Không</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Có Thể Gộp</label>
                    <select asp-for="filter.CanStack" class="form-select">
                        <option value="" disabled selected>Chọn</option>
                        <option value="true">Có</option>
                        <option value="false">Không</option>
                    </select>
                </div>
               
            </div>

            <div class="row mt-3">
                <!-- Fourth row with 2 columns -->
                <div class="col-md-6">
                    <label class="form-label">Mã Prefab</label>
                    <input asp-for="filter.PrefabCode" class="form-control" />
                    <span asp-validation-for="filter.PrefabCode" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Giá Mua</label>
                    <input asp-for="filter.ItemBuyPrice" class="form-control" />
                    <span asp-validation-for="filter.ItemBuyPrice" class="text-danger"></span>
                </div>
@*                 <div class="col-md-6">
                    <label class="form-label">Giá Bán</label>
                    <input asp-for="filter.ItemSellPrice" class="form-control" />
                    <span asp-validation-for="filter.ItemSellPrice" class="text-danger"></span>
                </div> *@
            </div>

            <!-- Search Button -->
            <button type="submit" class="btn btn-success-search mt-3">Tìm Kiếm</button>
        </form>
    </div>
</div>

