@page
@model WebAdmin.Pages.Item.CreateModel
@{
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">

    <div class="col-md-9">
        <div class="form-container">
            <form method="post" asp-page="./Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Item.ItemCode" class="control-label">Mã Vật Phẩm</label>
                    <input asp-for="Item.ItemCode" placeholder="Nhập Mã Vật Phẩm" class="form-control" required />
                    <span asp-validation-for="Item.ItemCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.ItemName" class="control-label">Tên Vật Phẩm</label>
                    <input asp-for="Item.ItemName" placeholder="Nhập Tên Vật Phẩm" class="form-control" required />
                    <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.ItemDescription" class="control-label">Mô Tả</label>
                    <input asp-for="Item.ItemDescription" placeholder="Nhập Mô Tả" class="form-control" />
                    <span asp-validation-for="Item.ItemDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.ItemType" class="control-label">Loại Vật Phẩm</label>
                    <select asp-for="Item.ItemType" class="form-control">
                        <option value="CHARACTER">Nhân Vật</option>
                        <option value="ROOM">Phòng</option>
                        <option value="DEFAULT">Mặc Định</option>
                    </select>
                    <span asp-validation-for="Item.ItemType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.CanExpire" class="control-label">Có Thể Hết Hạn?</label>
                    <input asp-for="Item.CanExpire" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="Item.CanExpire" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.CanStack" class="control-label">Có Thể Gộp?</label>
                    <input asp-for="Item.CanStack" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="Item.CanStack" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.PrefabCode" class="control-label">Mã Prefab</label>
                    <input asp-for="Item.PrefabCode" placeholder="Nhập Mã Prefab" class="form-control" />
                    <span asp-validation-for="Item.PrefabCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.ItemBuyPrice" class="control-label">Giá Mua</label>
                    <input asp-for="Item.ItemBuyPrice" type="number" placeholder="Nhập Giá Mua" class="form-control" />
                    <span asp-validation-for="Item.ItemBuyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Set Giá Bán to 0 and hide the input -->
                    <input asp-for="Item.ItemSellPrice" type="hidden" value="0" />
                    <span asp-validation-for="Item.ItemSellPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


