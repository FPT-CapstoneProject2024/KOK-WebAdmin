@page
@model WebAdmin.Pages.Transactions.Details.MonetaryModel
@{
}
<h1>Details</h1>

<div class="details">
    <hr />
    <dl class="row">
        <dt class="col-md-4 col-12">
            Tên Tài Khoản
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.Username)
        </dd>
        <dt class="col-md-4 col-12">
            Loại Thanh Toán
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.PaymentType)
        </dd>
        <dt class="col-md-4 col-12">
            Mã Thanh Toán
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.PaymentCode)
        </dd>
        <dt class="col-md-4 col-12">
            Tên Gói
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.PackageName)
        </dd>
        <dt class="col-md-4 col-12">
            Số Tiền
        </dt>
        <dd class="col-md-8 col-12">
            @Html.Raw(((int)Model.MonetaryTransaction.MoneyAmount))
        </dd>
        <dt class="col-md-4 col-12">
            Loại Tiền Tệ
        </dt>
        <dd class ="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.Currency)
        </dd>
        <dt class="col-md-4 col-12">
            Trạng Thái
        </dt>
        <dd class="col-md-8 col-12">
            @if (Model.MonetaryTransaction.Status.Equals("Hủy Bỏ") || Model.MonetaryTransaction.Status.Equals("CANCELLED"))
            {
                <span>Hủy Bỏ</span>
            }
            else if (Model.MonetaryTransaction.Status.Equals("Hoàn Thành") || Model.MonetaryTransaction.Status.Equals("COMPLETE"))
            {
                <span>Hoàn Thành</span>
            }
            else
            {
                <span>Hoàn Thành</span>
            }
        </dd>
        <dt class="col-md-4 col-12">
            Ngày Tạo
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.MonetaryTransaction.CreatedDate)
        </dd>      
    </dl>
</div>
<div>
    <a asp-page="/Transactions/Monetary">Back to List</a>
</div>
