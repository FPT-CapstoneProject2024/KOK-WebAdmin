<div class="input-group" style="margin:20px 0 25px 0;">
    <form asp-page-handler="Search" method="post" class="input-group" id="searchForm">
        <input name="txt_search" type="date" value="@ViewBag.filter_date" class="form-control-sm" aria-label="Search" aria-describedby="search-addon" onchange="this.form.submit()" />
    </form>
</div>

<div class="table-container"> 
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Tài Khoản</th>
                <th>Loại Giao Dịch</th>
                <th>Mã Giao Dịch</th>
                <th>Số Tiền</th>
                <th>Loại Tiền Tệ</th>
                <th>Trạng Thái</th>
                <th>Ngày Tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.data.Results != null)
            {
                int count = 0;
                @foreach (var item in Model.data.Results)
                {
                    <tr>
                        <td>@(count += 1)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentCode)
                        </td>
                        <td>@Html.Raw((int)item.MoneyAmount)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Currency)
                        </td>
                        <td>
                            @if (item.Status.Equals("Hủy Bỏ") || item.Status.Equals("CANCELLED"))
                            {
                                <span style="color: red;">@* @Html.DisplayFor(modelItem => package.Status) *@Hủy Bỏ</span>
                            }
                            else if (item.Status.Equals("Hoàn Thành") || item.Status.Equals("COMPLETE"))
                            {
                                <span style="color: green;">@* @Html.DisplayFor(modelItem => package.Status) *@Hoàn Thành</span>
                            }
                            else
                            {
                                <span>Chờ Xử Lý</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @* <a asp-page="./Details/Monetary" asp-route-id="@item.MonetaryTransactionId">Details</a>  *@
                            <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#detailMonetaryTransactionModal" style="border: none;padding: 0;width: 42px;height: 42px;align-items: center;justify-content: center;" data-id="@item.MonetaryTransactionId">
                                <i class="fa-solid fa-file-lines" style="font-size: 25px;color: #fff;"></i>
                            </button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>   
</div>

<div>
    <label style="color: red;">Tổng Tiền: </label>
    <p style="color:black;">@(Convert.ToInt32(ViewBag.TotalAmount)) VND</p>
</div>
<div>
    <label style="color: red;">Tổng giao dịch: </label>
    <p>@ViewBag.TotalTransaction</p>

</div>

<!-- Details Modal -->
<div class="modal fade" id="detailMonetaryTransactionModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal-width" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalLabel">Chi Tiết Giao Dịch</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body detail-modal-body">
                <!-- Nội dung chi tiết sẽ được tải vào đây -->
            </div>
        </div>
    </div>
</div>

<!-- Paging -->
<div class="pagination" style="left: 50%;">
    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
        <a asp-route-number="@(Model.CurrentPage - 1)" class="page-link">&laquo;</a>
    </li>
    <li class="page-item active">
        <a asp-route-number="@Model.CurrentPage" class="page-link">@Model.CurrentPage/@Model.TotalPage2</a>
    </li>
    <li class="page-item @(Model.CurrentPage == Model.TotalPage2 ? "disabled" : "")">
        <a asp-route-number="@(Model.CurrentPage + 1)" class="page-link">&raquo;</a>
    </li>
</div>
<!-- End Paging -->

<script>
    // Load Detail form content into the modal
    $(document).ready(function () {
        $('#detailMonetaryTransactionModal').on('show.bs.modal', function (e) {
            var button = $(e.relatedTarget);
            var TransactionId = button.data('id');
            var modal = $(this);

            // Tải nội dung từ trang Details và chỉ lấy phần thân của nội dung
            $.get('@Url.Page("/Transactions/Details/Monetary", new { id = "__ID__" })'.replace('__ID__', TransactionId), function (data) {
                var detailContent = $(data).find('.details').html(); // Lấy phần nội dung chính
                modal.find('.detail-modal-body').html(detailContent);
            });
        });
    });
</script>