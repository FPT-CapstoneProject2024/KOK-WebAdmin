    <tbody>
            @if(Model.data.Results != null)
            {
                @foreach (var item in Model.data.Results)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongUrl)
