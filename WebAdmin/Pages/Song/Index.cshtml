<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data.Results[0].SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data.Results[0].SongDescription)
            </th>
            <th>
