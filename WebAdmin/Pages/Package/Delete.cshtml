            @Html.DisplayFor(model => model.Package.MoneyAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.StarNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.StarNumber)
