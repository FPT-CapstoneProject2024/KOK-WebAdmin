@page
@model WebAdmin.Pages.Package.DetailsModel
@{
}

<style>
    .details dl.row {
        display: flex;
        flex-wrap: wrap;
    }

    .details dd {
        max-height: 150px; /* Set a fixed height, adjust as needed */
        overflow-y: auto; /* Enable vertical scrolling */
        word-wrap: break-word; /* Ensure long words wrap */
    }
</style>

<div class="details">
    <hr />
    <dl class="row">
        <dt class="col-md-4 col-12">
            Tên Gói
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.PackageName)
        </dd>
        <dt class="col-md-4 col-12">
            Mô Tả
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.Description)
        </dd>
        <dt class="col-md-4 col-12">
            Giá Gói
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.MoneyAmount)
        </dd>
        <dt class="col-md-4 col-12">
            Số UP
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.StarNumber)
        </dd>
        <dt class="col-md-4 col-12">
            Trạng Thái
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.Status)
        </dd>
        <dt class="col-md-4 col-12">
            Ngày Tạo
        </dt>
        <dd class="col-md-8 col-12">
            @Html.DisplayFor(model => model.Package.CreatedDate)
        </dd>
    </dl>
</div>

