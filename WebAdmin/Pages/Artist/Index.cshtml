@page
@model WebAdmin.Pages.Artist.IndexModel
@{
}
<!--Search-->
<div class="input-group">
    <form method="post" class="input-group">
        <input name="txt_search" type="search" class="form-control rounded" placeholder="Search..." value="@ViewBag.filter_search" aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
@*             <select class="form-control form-control-sm" aria-label="account filter" name="txt_filter">
                <option value="ArtistName" selected>Artist Name</option>
                <option value="Image">Image</option>
            </select> *@
        </span>
        <button asp-page-handler="Search" type="submit" class="btn btn-outline-success" data-mdb-ripple-init>Search</button>

    </form>
</div>
<!--End Search-->

<div class="table-container">
    <h1>Artist</h1>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createArtistModal">
        Create New
    </button>
</p>

    <table class="table table-hover">
    <thead>
        <tr>
            <th>Artist Name</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.data.Results != null)
        {
        @foreach (var item in Model.data.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td class="img-cell"><img src="@Html.DisplayFor(modelItem => item.Image)" alt="N/A"/></td>
                <td>
                    @* <a asp-page="./Edit" asp-route-id="@item.ArtistId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ArtistId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ArtistId">Delete</a> *@
                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#editArtistModal" data-id="@item.ArtistId">Edit</button>
                    <button type="button" class="btn btn-link" onclick="location.href='@Url.Page("./Details", new { id = item.ArtistId })'">Details</button>
                    <button type="button" class="btn btn-link" onclick="location.href='@Url.Page("./Delete", new { id = item.ArtistId })'">Delete</button>
                </td>
            </tr>
        }
        }

    </tbody>
</table>
</div
    <!--End Table-->
    <!--Paging-->
    <div class="pagination">
        <li class="page-item"><a asp-route-number="@(Model.CurrentPage - 1)" class="page-link">&laquo;</a></li>
        <li class="page-item active"><a asp-route-number="@Model.CurrentPage" class="page-link">@Model.CurrentPage</a></li>
        <li class="page-item"><a asp-route-number="@(Model.CurrentPage + 1)" class="page-link">&raquo;</a></li>
    </div>
    <!--End Paging-->
</div>

        <!-- Create Modal -->
<div class="modal fade" id="createArtistModal" tabindex="-1" role="dialog" aria-labelledby="createArtistModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createArtistModalLabel">Create New Artist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- The content of the Create page will be loaded here -->
                
            </div>            
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editArtistModal" tabindex="-1" role="dialog" aria-labelledby="editArtistModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg-custom" role="document">
        <div class="modal-content edit-modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editArtistModalLabel">Edit Artist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="edit-modal-body">
                <!-- The content of the Edit page will be loaded here -->

            </div>
        </div>
    </div>
</div>

<script>
    $('#createArtistModal').on('show.bs.modal', function (e) {
        var modal = $(this);
        // Load only the form content from the Create page
        $.get('@Url.Page("./Create")', function (data) {
            var formContent = $(data).find('form');
            modal.find('.modal-body').html(formContent);
        });
    });

    //Load Edit form content into the modal
    $('#editArtistModal').on('show.bs.modal', function (e) {
        var button = $(e.relatedTarget);
        var artistId = button.data('id');
        var modal = $(this);

        //Load the edit form from the Edit page
        $.get('@Url.Page("./Edit", new { id = "__ID__" })'.replace('__ID__', artistId), function (data) {
            var formContent = $(data).find('form');
            modal.find('.edit-modal-body').html(formContent);
        });
    });
</script>

 <style>
    .modal-dialog.modal-lg-custom {
        max-width: 500px;
    }

    .edit-modal-content {
        padding: 20px;
    }
</style>