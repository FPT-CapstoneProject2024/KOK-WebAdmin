@page
@model WebAdmin.Pages.Artist.CreateModel
@{
}
<h1>Create</h1>

<h4>Artist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-page="./Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artist.ArtistName" class="control-label">Tên Tác Giả</label>
                <input asp-for="Artist.ArtistName" placeholder="Nhập Tên Tác Giả" required class="form-control"/>
                <span asp-validation-for="Artist.ArtistName" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="Artist.Image" class="control-label"></label>
                <input asp-for="Artist.Image" class="form-control" />
                <span asp-validation-for="Artist.Image" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label for="file" class="control-label">Hình Ảnh</label>
                <input type="file" name="file" class="form-control" />
            </div>

            <div id="result">
                @if (ViewBag.ImageUrl != null)
                {
                    <p>Upload successful!</p>
                    <img src="@ViewBag.ImageUrl" alt="Uploaded Image" width="200" />
                    <p>Image URL: <a href="@ViewBag.ImageUrl" target="_blank">@ViewBag.ImageUrl</a></p>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
