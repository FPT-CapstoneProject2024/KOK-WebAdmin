            margin: 10px;
            transition: transform 0.3s ease; /* Tạo hiệu ứng mượt khi phóng to */
        }

        video{
            border-radius:5%;

        }

        .img-cell:hover img {
            transform: scale(2.5) translateX(-30px) translateY(-30px); /* Phóng to ảnh lên 1.5 lần khi di chuột vào */
