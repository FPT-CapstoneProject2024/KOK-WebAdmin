@page
@model WebAdmin.Pages.Genre.CreateModel
@{
}
<h1>Create</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-page="./Create" asp-page-handler="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genre.GenreName" class="control-label">Thể Loại</label>
                <input asp-for="Genre.GenreName" required class="form-control" placeholder="Nhập tên thể loại" />
                <span asp-validation-for="Genre.GenreName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="file" class="control-label">Hình Ảnh</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div id="result">
                @if (ViewBag.ImageUrl != null)
                {
                    <p>Tải Thành Công!</p>
                    <img src="@ViewBag.ImageUrl" alt="Uploaded Image" width="200" />
                    <p>Image URL: <a href="@ViewBag.ImageUrl" target="_blank">@ViewBag.ImageUrl</a></p>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
