@page
@model WebAdmin.Pages.Genre.IndexModel
@{
}

<head>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<!--Search-->
<div class="input-group">
    <form method="post" class="input-group">
        <input asp-for="search" type="search" class="form-control rounded" placeholder="Tìm Kiếm..." aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-btn" style="padding-left: 20px;">
            <button asp-page-handler="Search" type="submit" class="btn btn-outline-success" data-mdb-ripple-init>Tìm Kiếm</button>
        </span>
    </form>
</div>
<!--End Search-->

<div style="padding-top: 10px;">
    <p>
        <button type="button" class="btn btn-success btn-icon-only" data-toggle="modal" data-target="#createGenreModal" style="border: none; background: transparent; padding: 0;">
            <i class="fa-regular fa-square-plus" style="font-size: 42px; color: #28a745;"></i>
        </button>
    </p>
</div>
<div class="table-container">
    <table class="table table-hover">
    <thead>
        <tr>
            <th>
                Tên Thể Loại
            </th>
            <th>Hình Ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.data.Results != null)
        {
        @foreach (var item in Model.data.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td class="img-cell"><img src="@Html.DisplayFor(modelItem => item.Image)" alt="N/A"/></td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editGenreModal" data-id="@item.GenreId">
                        <i class="fa-solid fa-pen" style="font-size: 25px;color: #fff;"></i>
                    </button>
                    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#detailGenreModal" style="border: none;padding: 0;width: 42px;height: 42px;align-items: center;justify-content: center;" data-id="@item.GenreId">
                        <i class="fa-solid fa-file-lines" style="font-size: 25px;color: #fff;"></i>
                    </button>
                    <button type="button" class="btn btn-google-plus" data-toggle="modal" data-target="#deleteGenreModal" data-id="@item.GenreId">
                                <i class="fa-regular fa-trash-can" style="font-size: 25px; color: #fff;"></i>
                            </button>
                </td>
            </tr>
        }
        }

    </tbody>
</table>
</div>

<!-- Paging -->
<div class="pagination" style="left: 50%;">
    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
        <a asp-route-number="@(Model.CurrentPage - 1)" class="page-link">&laquo;</a>
    </li>
    <li class="page-item active">
        <a asp-route-number="@Model.CurrentPage" class="page-link">@Model.CurrentPage/@Model.TotalPage2</a>
    </li>
    <li class="page-item @(Model.CurrentPage == Model.TotalPage2 ? "disabled" : "")">
        <a asp-route-number="@(Model.CurrentPage + 1)" class="page-link">&raquo;</a>
    </li>
</div>
<!-- End Paging -->

<!-- Create Modal -->
<div class="modal fade" id="createGenreModal" tabindex="-1" role="dialog" aria-labelledby="createGenreModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createGenreModalLabel">Tạo Mới Thể Loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- The content of the Create page will be loaded here -->
                
            </div>            
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editGenreModal" tabindex="-1" role="dialog" aria-labelledby="editGenreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg-custom" role="document">
        <div class="modal-content edit-modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editGenreModalLabel">Chỉnh Sửa Thể Loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="edit-modal-body">
                <!-- The content of the Edit page will be loaded here -->

            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteGenreModal" tabindex="-1" role="dialog" aria-labelledby="deleteGenreModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content delete-modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteGenreModalLabel">Xóa Thể Loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="delete-modal-body">
                <!-- The content of the Delete page will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailGenreModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal-width" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalLabel">Chi Tiết Thể Loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body detail-modal-body">
                 <!-- Nội dung chi tiết sẽ được tải vào đây -->
            </div>
        </div>
    </div>
</div>


<script>
// Load Detail form content into the modal
$(document).ready(function () {
    $('#detailGenreModal').on('show.bs.modal', function (e) {
        var button = $(e.relatedTarget);
        var genreId = button.data('id');
        var modal = $(this);

        // Tải nội dung từ trang Details và chỉ lấy phần thân của nội dung
        $.get('@Url.Page("/Genre/Details", new { id = "__ID__" })'.replace('__ID__', genreId), function (data) {
            var detailContent = $(data).find('.details').html(); // Lấy phần nội dung chính
            modal.find('.detail-modal-body').html(detailContent);
        });
    });
});

// Load Detail form content into the modal
$(document).ready(function () {
    $('#detailGenreModal').on('show.bs.modal', function (e) {
        var button = $(e.relatedTarget);
        var GenreId = button.data('id');
        var modal = $(this);

        console.log('Detail Modal triggered for GenreId:', GenreId);
        // Tải nội dung từ trang Details và chỉ lấy phần thân của nội dung
        $.get('@Url.Page("/Genre/Details", new { id = "__ID__" })'.replace('__ID__', GenreId), function (data) {
            var detailContent = $(data).find('.details').html(); // Lấy phần nội dung chính
            modal.find('.detail-modal-body').html(detailContent);
        });
    });
});

$(document).ready(function () {
    $('#createGenreModal').on('show.bs.modal', function (e) {
        var modal = $(this);
        // Load only the form content from the Create page
        $.get('@Url.Page("./Create")', function (data) {
            var formContent = $(data).find('form');
            modal.find('.modal-body').html(formContent);

            // Attach an event listener to the form submit event
            modal.find('form').on('submit', function (e) {
                e.preventDefault(); // Prevent normal form submission

                // Create a new FormData object to handle file uploads
                var formData = new FormData(this);

                // Use AJAX to submit the form data
                $.ajax({
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    data: formData,
                    contentType: false, // Important: tells jQuery not to process the data
                    processData: false, // Important: tells jQuery not to convert the FormData into a query string
                    success: function (response) {
                        if (response.success) {
                            // Close the modal and remove the backdrop
                            modal.modal('hide');
                            $('.modal-backdrop').remove(); // Ensure the backdrop is removed

                            // Show the success popup
                            Swal.fire({
                                title: 'Success!',
                                text: 'Tạo mới thể loại thành công!',
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    // Reload the page when the user presses OK
                                    location.reload();
                                }
                            });
                        } else {
                            // Handle the failure case
                            Swal.fire({
                                title: 'Error!',
                                text: 'Tạo mới thể loại thất bại!',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });

                            // Close the modal and remove the backdrop
                            modal.modal('hide');
                            $('.modal-backdrop').remove();
                        }
                    },
                    error: function () {
                        // Close the modal and remove the backdrop in case of an error
                        modal.modal('hide');
                        $('.modal-backdrop').remove();

                        Swal.fire({
                            title: 'Error!',
                            text: 'Xảy ra lỗi với tác vụ!',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    });
});

// Load Edit form content into the modal
$('#editGenreModal').on('show.bs.modal', function (e) {
    var button = $(e.relatedTarget);
    var genreId = button.data('id');
    var modal = $(this);

    // Load the edit form from the Edit page
    $.get('@Url.Page("./Edit", new { id = "__ID__" })'.replace('__ID__', genreId), function (data) {
        var formContent = $(data).find('form');
        modal.find('.edit-modal-body').html(formContent);

        // Attach an event listener to the form submit event
        modal.find('form').on('submit', function (e) {
            e.preventDefault(); // Prevent normal form submission

            // Create FormData object to include the file input
            var formData = new FormData(this);

            // Use AJAX to submit the form data
            $.ajax({
                type: $(this).attr('method'),
                url: $(this).attr('action'),
                data: formData,  // Pass FormData object
                processData: false,  // Prevent jQuery from processing the data
                contentType: false,  // Prevent jQuery from setting the content type
                success: function (response) {
                    if (response.success) {
                        // Close the modal and remove the backdrop
                        modal.modal('hide');
                        $('.modal-backdrop').remove(); // Ensure the backdrop is removed

                        // Show the success popup
                        Swal.fire({
                            title: 'Success!',
                            text: 'Chỉnh sửa thể loại thành công!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Reload the page when the user presses OK
                                location.reload();
                            }
                        });
                    } else {
                        // Handle the failure case
                        Swal.fire({
                            title: 'Error!',
                            text: 'Chỉnh sửa thể loại thất bại!',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });

                        // Close the modal and remove the backdrop
                        modal.modal('hide');
                        $('.modal-backdrop').remove();
                    }
                },
                error: function () {
                    // Close the modal and remove the backdrop in case of an error
                    modal.modal('hide');
                    $('.modal-backdrop').remove();

                    Swal.fire({
                        title: 'Error!',
                        text: 'Xảy ra lỗi với tác vụ!',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    });
});

//Load Delete form content into the modal
$('#deleteGenreModal').on('show.bs.modal', function (e) {
    var button = $(e.relatedTarget);
    var genreId = button.data('id');
    var modal = $(this);

    //Load the delete form from the Delete page
    $.get('@Url.Page("./Delete", new { id = "__ID__" })'.replace('__ID__', genreId), function (data) {
        var deleteContent = $(data).find('.delete').html(); // Lấy phần nội dung chính
        modal.find('.delete-modal-body').html(deleteContent);

        // Attach an event listener to the form submit event
        modal.find('form').on('submit', function (e) {
            e.preventDefault(); // Prevent normal form submission

            // Use AJAX to submit the form data
            $.ajax({
                type: $(this).attr('method'),
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        // Close the modal and remove the backdrop
                        modal.modal('hide');
                        $('.modal-backdrop').remove(); // Ensure the backdrop is removed

                        // Show the success popup
                        Swal.fire({
                            title: 'Success!',
                            text: 'Xóa thể loại thành công!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Reload the page when the user presses OK
                                location.reload();
                            }
                        });
                    } else {
                        // Handle the failure case
                        Swal.fire({
                            title: 'Error!',
                            text: 'Xóa thể loại thất bại!',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });

                        // Close the modal and remove the backdrop
                        modal.modal('hide');
                        $('.modal-backdrop').remove();
                    }
                },
                error: function () {
                    // Close the modal and remove the backdrop in case of an error
                    modal.modal('hide');
                    $('.modal-backdrop').remove();

                    Swal.fire({
                        title: 'Error!',
                        text: 'Xảy ra lỗi với tác vụ!',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    });
});


</script>

